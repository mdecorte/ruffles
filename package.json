{
    "name": "ruffles",
    "version": "1.0.0",
    "description": "test express api app",
    "main": "app.js",
    "scripts": {
        "watch": "watchify client/main.js -o public/app.js -v",
        "build": "browserify -t babelify client/main.js -o public/app.js",
        "start": "npm run watch & node app.js"
    },
    "author": "mdecorte",
    "license": "ISC",
    "babel": {
        "presets": [
            "es2017",
            "es2016",
            "es2015",
            "react"
        ],
        "plugins": [
            "transform-decorators-legacy",
            "transform-class-properties"
        ]
    },
    "browserify": {
        "transform": [
            ["babelify", {
                "presets": ["es2017",
                    "es2016",
                    "es2015",
                    "react"
                ]
            }]
        ]
    },
    "dependencies": {
        "express": "^4.14.0",
        "ns-api": "^2.0.5",
        "nunjucks": "^3.0.0",
        "react": "^15.4.2",
        "react-dom": "^15.4.2"
    },
    "devDependencies": {
        "babel-cli": "^6.23.0",
        "babel-preset-react": "^6.23.0",
        "browserify": "^14.1.0",
        "watchify": "^3.9.0"
    }
}
